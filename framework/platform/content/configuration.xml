<project name="configuration">

	<!--
		Script called by MicroEJ Workbench when building the platform.
	-->
	
	<!--
		Defines some properties used in this configuration project 
		(in ant and properties files)
	-->
	<dirname file="${ant.file.configuration}" property="configuration.dir"/>
	<dirname file="${configuration.dir}" property="workspace"/>
	<basename file="${configuration.dir}" suffix="-configuration" property="project.prefix"/>
	
	<!--
		Import all build/platform/platform-*.ant files
	-->
	<import optional="true">
		<fileset dir="${configuration.dir}/build/platform" includes="platform-*.ant" />
		<path location="DUMMY" /> <!-- ensure the nested resources set is not empty -->
	</import>
	

</project>
